<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/di_color"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_shangke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yinpin_btn_status"
            android:drawableTop="@drawable/shangke"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:text="上课"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_20" />


        <Button
            android:id="@+id/btn_xiake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/changjing_btn_marginLeft"
            android:background="@drawable/yinpin_btn_status"
            android:drawableTop="@drawable/xiake"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:text="下课"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_20" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/changjing_btn_marginTop"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_zixi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yinpin_btn_status"
            android:drawableTop="@drawable/zixi"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:text="自习"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_20" />


        <Button
            android:id="@+id/btn_xiuxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/changjing_btn_marginLeft"
            android:background="@drawable/yinpin_btn_status"
            android:drawableTop="@drawable/xiuxi"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:text="休息"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_20" />


    </LinearLayout>


</LinearLayout>