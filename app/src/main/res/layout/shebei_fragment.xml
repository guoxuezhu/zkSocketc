<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/di_color"
    android:padding="@dimen/dp_20"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/layout_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/huanjing_tv_marginTop_1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="温度："
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/huanjing_text_size" />

                <TextView
                    android:id="@+id/tv_wsd_wd"
                    android:layout_width="@dimen/huanjing_tv_width"
                    android:layout_height="wrap_content"
                    android:background="@drawable/huanjing_layout_bg"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="22"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/huanjing_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/huanjing_tv_marginTop"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="PM 2.5："
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/huanjing_text_size" />

                <TextView
                    android:id="@+id/tv_wsd_pm"
                    android:layout_width="@dimen/huanjing_tv_width"
                    android:layout_height="wrap_content"
                    android:background="@drawable/huanjing_layout_bg"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="300"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/huanjing_text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/huanjing_tv_marginTop_1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="湿度："
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/huanjing_text_size" />

                <TextView
                    android:id="@+id/tv_wsd_sd"
                    android:layout_width="@dimen/huanjing_tv_width"
                    android:layout_height="wrap_content"
                    android:background="@drawable/huanjing_layout_bg"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="0.22"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/huanjing_text_size" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/layout_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/shebei_btn_marginTop"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/rbtn_dg_1_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shebei_checkbox_status"
                    android:button="@null"
                    android:gravity="center"
                    android:text="窗帘开"
                    android:textColor="@color/text_color_1"
                    android:textSize="16sp" />


                <RadioButton
                    android:id="@+id/rbtn_dg_1_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shebei_btn_marginTop"
                    android:background="@drawable/shebei_checkbox_status"
                    android:button="@null"
                    android:gravity="center"
                    android:text="窗帘关"
                    android:textColor="@color/text_color_1"
                    android:textSize="16sp" />


            </RadioGroup>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/shebei_btn_marginLeft_1"
                android:gravity="center"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/rbtn_dg_2_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shebei_checkbox_status"
                    android:button="@null"
                    android:gravity="center"
                    android:text="灯光开"
                    android:textColor="@color/text_color_1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rbtn_dg_2_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shebei_btn_marginTop"
                    android:background="@drawable/shebei_checkbox_status"
                    android:button="@null"
                    android:gravity="center"
                    android:text="灯光关"
                    android:textColor="@color/text_color_1"
                    android:textSize="16sp" />


            </RadioGroup>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/shebei_btn_marginLeft_2"
                android:gravity="center"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/rbtn_dg_3_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shebei_checkbox_status"
                    android:button="@null"
                    android:gravity="center"
                    android:text="投影机开"
                    android:textColor="@color/text_color_1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rbtn_dg_3_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shebei_btn_marginTop"
                    android:background="@drawable/shebei_checkbox_status"
                    android:button="@null"
                    android:gravity="center"
                    android:text="投影机关"
                    android:textColor="@color/text_color_1"
                    android:textSize="16sp" />


            </RadioGroup>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/shebei_btn_marginLeft_1"
                android:gravity="center"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/rbtn_dg_4_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shebei_checkbox_status"
                    android:button="@null"
                    android:gravity="center"
                    android:text="幕布升"
                    android:textColor="@color/text_color_1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rbtn_dg_4_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shebei_btn_marginTop"
                    android:background="@drawable/shebei_checkbox_status"
                    android:button="@null"
                    android:gravity="center"
                    android:text="幕布降"
                    android:textColor="@color/text_color_1"
                    android:textSize="16sp" />


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/shebei_btn_marginTop"
            android:gravity="center"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/rbtn_mj_1_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shebei_checkbox_status"
                android:button="@null"
                android:gravity="center"
                android:text="空调开/关"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_16" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/shebei_btn_marginLeft_1"
                android:background="@drawable/huanjing_btn_status"
                android:text="温度+"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_16" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/shebei_btn_marginLeft_1"
                android:background="@drawable/huanjing_btn_status"
                android:text="温度-"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_16" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/shebei_btn_marginLeft_1"
                android:background="@drawable/huanjing_btn_status"
                android:text="开门"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_16" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>