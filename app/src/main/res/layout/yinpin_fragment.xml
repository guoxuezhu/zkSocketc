<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/di_color"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/zongyinliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yinpin_checked_status"
                android:button="@null"
                android:drawableTop="@drawable/zongyinliang"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="总音量"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_20"
                app:buttonCompat="@null" />

            <RadioButton
                android:id="@+id/yinxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/yinpin_btn_marginLeft"
                android:background="@drawable/yinpin_checked_status"
                android:button="@null"
                android:drawableTop="@drawable/yinxiang"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="音响"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_20"
                app:buttonCompat="@null" />

            <RadioButton
                android:id="@+id/maikefeng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/yinpin_btn_marginLeft"
                android:background="@drawable/yinpin_checked_status"
                android:button="@null"
                android:drawableTop="@drawable/maikefeng_1"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="麦克风"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_20"
                app:buttonCompat="@null" />

        </RadioGroup>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/yinliang_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yinpin_btn_status"
            android:drawableTop="@drawable/yin_jia"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:text="音量＋"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_20"
            app:buttonCompat="@null" />

        <Button
            android:id="@+id/yinliang_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yinpin_btn_marginLeft"
            android:background="@drawable/yinpin_btn_status"
            android:drawableTop="@drawable/yin_jian"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:text="音量－"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_20"
            app:buttonCompat="@null" />


        <CheckBox
            android:id="@+id/jingyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yinpin_btn_marginLeft"
            android:background="@drawable/yinpin_checked_status"
            android:button="@null"
            android:drawableTop="@drawable/jingyin"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:text="静音"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_20"
            app:buttonCompat="@null" />


    </LinearLayout>

</LinearLayout>