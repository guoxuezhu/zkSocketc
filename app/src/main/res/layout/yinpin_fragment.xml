<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    android:gravity="center"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/zongyinliang"
            android:layout_width="@dimen/yinpin_btn_height"
            android:layout_height="@dimen/yinpin_btn_height"
            android:background="@drawable/yinpin_checked_status"
            android:button="@null"
            android:drawableTop="@drawable/yp_img_1"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:text="手持话筒"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            app:buttonCompat="@null" />

        <RadioButton
            android:id="@+id/yinxiang"
            android:layout_width="@dimen/yinpin_btn_height"
            android:layout_height="@dimen/yinpin_btn_height"
            android:layout_marginLeft="@dimen/yinpin_btn_marginLeft"
            android:background="@drawable/yinpin_checked_status"
            android:button="@null"
            android:drawableTop="@drawable/yp_img_2"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:text="头戴话筒"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            app:buttonCompat="@null" />

        <RadioButton
            android:id="@+id/maikefeng"
            android:layout_width="@dimen/yinpin_btn_height"
            android:layout_height="@dimen/yinpin_btn_height"
            android:layout_marginLeft="@dimen/yinpin_btn_marginLeft"
            android:background="@drawable/yinpin_checked_status"
            android:button="@null"
            android:drawableTop="@drawable/yp_img_3"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:text="课件声音"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            app:buttonCompat="@null" />

    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/jingyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/checked_status_1"
            android:drawablePadding="0dp"
            android:gravity="center"
            app:buttonCompat="@null" />


        <SeekBar
            android:id="@+id/seek_bar_yl"
            android:layout_width="530dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:max="22"
            android:maxHeight="30dp"
            android:minHeight="30dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:progressDrawable="@drawable/seek_bar_style"
            android:thumb="@drawable/seek_bar_thumb" />

    </LinearLayout>

</LinearLayout>