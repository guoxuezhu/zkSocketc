<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/di_color"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="投影机"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_20" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/shebei_btn_marginTop"
                android:gravity="center"
                android:orientation="horizontal">


                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/rbtn_tyj_open"
                        android:layout_width="@dimen/dianyuan_btn_width"
                        android:layout_height="@dimen/dianyuan_btn_height"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:gravity="center"
                        android:text="投影机开"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/shebei_text_size" />

                    <RadioButton
                        android:id="@+id/rbtn_tyj_close"
                        android:layout_width="@dimen/dianyuan_btn_width"
                        android:layout_height="@dimen/dianyuan_btn_height"
                        android:layout_marginTop="@dimen/shebei_btn_marginTop"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:gravity="center"
                        android:text="投影机关"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/shebei_text_size" />


                </RadioGroup>


                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/rbtn_tyj_bu_open"
                        android:layout_width="@dimen/dianyuan_btn_width"
                        android:layout_height="@dimen/dianyuan_btn_height"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:gravity="center"
                        android:text="幕布升"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/shebei_text_size" />

                    <RadioButton
                        android:id="@+id/rbtn_tyj_bu_close"
                        android:layout_width="@dimen/dianyuan_btn_width"
                        android:layout_height="@dimen/dianyuan_btn_height"
                        android:layout_marginTop="@dimen/shebei_btn_marginTop"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:gravity="center"
                        android:text="幕布降"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/shebei_text_size" />


                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/layout_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="大屏一体机"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_20" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/shebei_btn_marginTop"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/rbtn_ytj_open"
                        android:layout_width="@dimen/dianyuan_btn_width"
                        android:layout_height="@dimen/dianyuan_btn_height"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:gravity="center"
                        android:text="一体机开"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/shebei_text_size" />

                    <RadioButton
                        android:id="@+id/rbtn_ytj_close"
                        android:layout_width="@dimen/dianyuan_btn_width"
                        android:layout_height="@dimen/dianyuan_btn_height"
                        android:layout_marginTop="@dimen/shebei_btn_marginTop"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:gravity="center"
                        android:text="一体机关"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/shebei_text_size" />


                </RadioGroup>


                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/rbtn_nei_hdmi"
                        android:layout_width="@dimen/dianyuan_btn_width"
                        android:layout_height="@dimen/dianyuan_btn_height"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:gravity="center"
                        android:text="内置显示"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/shebei_text_size" />

                    <RadioButton
                        android:id="@+id/rbtn_wai_hdmi"
                        android:layout_width="@dimen/dianyuan_btn_width"
                        android:layout_height="@dimen/dianyuan_btn_height"
                        android:layout_marginTop="@dimen/shebei_btn_marginTop"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:gravity="center"
                        android:text="外置HDMI"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/shebei_text_size" />


                </RadioGroup>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="2"
        android:background="@drawable/layout_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="电视机"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_20" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/shebei_btn_marginTop"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_hw_ds_1"
                    android:layout_width="@dimen/dianyuan_btn_width"
                    android:layout_height="@dimen/dianyuan_btn_height"
                    android:background="@drawable/huanjing_btn_status"
                    android:text="电视机1"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dianyuan_text_size" />

                <Button
                    android:id="@+id/btn_hw_ds_2"
                    android:layout_width="@dimen/dianyuan_btn_width"
                    android:layout_height="@dimen/dianyuan_btn_height"
                    android:layout_marginLeft="@dimen/shebei_btn_marginLeft_1"
                    android:background="@drawable/huanjing_btn_status"
                    android:text="电视机2"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dianyuan_text_size" />

                <Button
                    android:id="@+id/btn_hw_ds_3"
                    android:layout_width="@dimen/dianyuan_btn_width"
                    android:layout_height="@dimen/dianyuan_btn_height"
                    android:layout_marginLeft="@dimen/shebei_btn_marginLeft_1"
                    android:background="@drawable/huanjing_btn_status"
                    android:text="电视机3"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dianyuan_text_size" />


                <Button
                    android:id="@+id/btn_hw_ds_4"
                    android:layout_width="@dimen/dianyuan_btn_width"
                    android:layout_height="@dimen/dianyuan_btn_height"
                    android:layout_marginLeft="@dimen/shebei_btn_marginLeft_1"
                    android:background="@drawable/huanjing_btn_status"
                    android:text="电视机4"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dianyuan_text_size" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shebei_btn_marginTop"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_hw_ds_5"
                    android:layout_width="@dimen/dianyuan_btn_width"
                    android:layout_height="@dimen/dianyuan_btn_height"
                    android:background="@drawable/huanjing_btn_status"
                    android:text="电视机5"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dianyuan_text_size" />

                <Button
                    android:id="@+id/btn_hw_ds_6"
                    android:layout_width="@dimen/dianyuan_btn_width"
                    android:layout_height="@dimen/dianyuan_btn_height"
                    android:layout_marginLeft="@dimen/shebei_btn_marginLeft_1"
                    android:background="@drawable/huanjing_btn_status"
                    android:text="电视机6"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dianyuan_text_size" />

                <Button
                    android:id="@+id/btn_hw_ds_7"
                    android:layout_width="@dimen/dianyuan_btn_width"
                    android:layout_height="@dimen/dianyuan_btn_height"
                    android:layout_marginLeft="@dimen/shebei_btn_marginLeft_1"
                    android:background="@drawable/huanjing_btn_status"
                    android:text="电视机7"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dianyuan_text_size" />


                <Button
                    android:id="@+id/btn_hw_ds_8"
                    android:layout_width="@dimen/dianyuan_btn_width"
                    android:layout_height="@dimen/dianyuan_btn_height"
                    android:layout_marginLeft="@dimen/shebei_btn_marginLeft_1"
                    android:background="@drawable/huanjing_btn_status"
                    android:text="电视机8"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/dianyuan_text_size" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>