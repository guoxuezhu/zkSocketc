<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_1"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="投影机"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">


                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/rbtn_tyj_open"
                        android:layout_width="@dimen/shebei_btn_width"
                        android:layout_height="@dimen/shebei_btn_width"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:drawableTop="@drawable/wl_tyj_2"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:text="投影机开"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shebei_text_size"
                        app:buttonCompat="@null" />

                    <RadioButton
                        android:id="@+id/rbtn_tyj_close"
                        android:layout_width="@dimen/shebei_btn_width"
                        android:layout_height="@dimen/shebei_btn_width"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:drawableTop="@drawable/wl_tyj_1"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:text="投影机关"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shebei_text_size"
                        app:buttonCompat="@null" />


                </RadioGroup>


                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/rbtn_tyj_bu_open"
                        android:layout_width="@dimen/shebei_btn_width"
                        android:layout_height="@dimen/shebei_btn_width"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:drawableTop="@drawable/wl_mb_1"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:text="幕布升"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shebei_text_size"
                        app:buttonCompat="@null" />

                    <RadioButton
                        android:id="@+id/rbtn_tyj_bu_close"
                        android:layout_width="@dimen/shebei_btn_width"
                        android:layout_height="@dimen/shebei_btn_width"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:drawableTop="@drawable/wl_mb_1"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:text="幕布降"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shebei_text_size"
                        app:buttonCompat="@null" />


                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_1"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="大屏一体机"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/shebei_btn_marginTop"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/rbtn_ytj_open"
                        android:layout_width="@dimen/shebei_btn_width"
                        android:layout_height="@dimen/shebei_btn_width"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:drawableTop="@drawable/sp_2"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:text="一体机开"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shebei_text_size"
                        app:buttonCompat="@null" />

                    <RadioButton
                        android:id="@+id/rbtn_ytj_close"
                        android:layout_width="@dimen/shebei_btn_width"
                        android:layout_height="@dimen/shebei_btn_width"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:drawableTop="@drawable/sp_2"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:text="一体机关"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shebei_text_size"
                        app:buttonCompat="@null" />


                </RadioGroup>


                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/rbtn_nei_hdmi"
                        android:layout_width="@dimen/shebei_btn_width"
                        android:layout_height="@dimen/shebei_btn_width"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:drawableTop="@drawable/neizhi"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:text="内置显示"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shebei_text_size"
                        app:buttonCompat="@null" />

                    <RadioButton
                        android:id="@+id/rbtn_wai_hdmi"
                        android:layout_width="@dimen/shebei_btn_width"
                        android:layout_height="@dimen/shebei_btn_width"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:drawableTop="@drawable/waizhi"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:text="外置HDMI"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shebei_text_size"
                        app:buttonCompat="@null" />


                </RadioGroup>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>