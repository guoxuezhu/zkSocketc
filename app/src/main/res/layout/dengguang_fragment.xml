<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/layout_bg_1"
            android:gravity="center"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radio_group_dg_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbtn_dg_all_open"
                    android:layout_width="@dimen/dg_btn_width"
                    android:layout_height="@dimen/dg_btn_height"
                    android:background="@drawable/shebei_checkbox_status"
                    android:button="@null"
                    android:drawableLeft="@drawable/wl_dg_2"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="灯光全开"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shebei_text_size"
                    app:buttonCompat="@null" />


                <RadioButton
                    android:id="@+id/rbtn_dg_all_close"
                    android:layout_width="@dimen/dg_btn_width"
                    android:layout_height="@dimen/dg_btn_height"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shebei_checkbox_status"
                    android:button="@null"
                    android:drawableLeft="@drawable/wl_dg_1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="灯光全关"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shebei_text_size"
                    app:buttonCompat="@null" />


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="4"
            android:background="@drawable/layout_bg_1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/rbtn_hbd_open"
                        android:layout_width="@dimen/dg_btn_width"
                        android:layout_height="@dimen/dg_btn_height"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:drawableLeft="@drawable/wl_dg_2"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="黑板灯开"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shebei_text_size"
                        app:buttonCompat="@null" />


                    <RadioButton
                        android:id="@+id/rbtn_hbd_close"
                        android:layout_width="@dimen/dg_btn_width"
                        android:layout_height="@dimen/dg_btn_height"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:drawableLeft="@drawable/wl_dg_1"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="黑板灯关"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shebei_text_size"
                        app:buttonCompat="@null" />


                </RadioGroup>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/rbtn_jsd_open"
                        android:layout_width="@dimen/dg_btn_width"
                        android:layout_height="@dimen/dg_btn_height"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:drawableLeft="@drawable/wl_dg_2"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="教室灯开"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shebei_text_size"
                        app:buttonCompat="@null" />

                    <RadioButton
                        android:id="@+id/rbtn_jsd_close"
                        android:layout_width="@dimen/dg_btn_width"
                        android:layout_height="@dimen/dg_btn_height"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shebei_checkbox_status"
                        android:button="@null"
                        android:drawableLeft="@drawable/wl_dg_1"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="教室灯关"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shebei_text_size"
                        app:buttonCompat="@null" />


                </RadioGroup>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1"
        android:background="@drawable/layout_bg_1"
        android:gravity="center"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rbtn_dgms_1"
            android:layout_width="@dimen/dg_btn_width"
            android:layout_height="@dimen/dg_btn_height"
            android:background="@drawable/shebei_checkbox_status"
            android:button="@null"
            android:drawableLeft="@drawable/wl_dg_2"
            android:gravity="center"
            android:padding="15dp"
            android:text="自习模式"
            android:textColor="@color/white"
            android:textSize="@dimen/shebei_text_size"
            app:buttonCompat="@null" />

        <RadioButton
            android:id="@+id/rbtn_dgms_2"
            android:layout_width="@dimen/dg_btn_width"
            android:layout_height="@dimen/dg_btn_height"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shebei_checkbox_status"
            android:button="@null"
            android:drawableLeft="@drawable/wl_dg_2"
            android:gravity="center"
            android:padding="15dp"
            android:text="投影模式"
            android:textColor="@color/white"
            android:textSize="@dimen/shebei_text_size"
            app:buttonCompat="@null" />

        <RadioButton
            android:id="@+id/rbtn_dgms_3"
            android:layout_width="@dimen/dg_btn_width"
            android:layout_height="@dimen/dg_btn_height"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shebei_checkbox_status"
            android:button="@null"
            android:drawableLeft="@drawable/wl_dg_2"
            android:gravity="center"
            android:padding="15dp"
            android:text="自动模式"
            android:textColor="@color/white"
            android:textSize="@dimen/shebei_text_size"
            app:buttonCompat="@null" />

        <RadioButton
            android:id="@+id/rbtn_dgms_4"
            android:layout_width="@dimen/dg_btn_width"
            android:layout_height="@dimen/dg_btn_height"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shebei_checkbox_status"
            android:button="@null"
            android:drawableLeft="@drawable/wl_dg_2"
            android:gravity="center"
            android:padding="15dp"
            android:text="课间模式"
            android:textColor="@color/white"
            android:textSize="@dimen/shebei_text_size"
            app:buttonCompat="@null" />

    </RadioGroup>
</LinearLayout>