<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="85px"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtn_changjing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_status_1"
                android:button="@null"
                android:drawableLeft="@drawable/changjing"
                android:drawablePadding="15dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="一键"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/xian" />

            <RadioButton
                android:id="@+id/rbtn_juzhen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_status_1"
                android:button="@null"
                android:drawableLeft="@drawable/shipin"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="互动"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/xian" />

            <RadioButton
                android:id="@+id/rbtn_shebei"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_status_1"
                android:button="@null"
                android:drawableLeft="@drawable/shebei"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="物联"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/xian" />

            <RadioButton
                android:id="@+id/rbtn_lubo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_status_1"
                android:button="@null"
                android:drawableLeft="@drawable/lubo"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="录播"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/xian" />

            <RadioButton
                android:id="@+id/rbtn_yinpin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_status_1"
                android:button="@null"
                android:drawableLeft="@drawable/yinpin"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="音频"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/xian" />

            <RadioButton
                android:id="@+id/rbtn_dianyuan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_status_1"
                android:button="@null"
                android:drawableLeft="@drawable/dianyuan"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="其它"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="169dp"
            android:layout_height="match_parent"
            android:background="@color/rdio_btn_bg_color"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/xian" />


                <RadioButton
                    android:id="@+id/rbtn_shangke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_btn_status_2"
                    android:button="@null"
                    android:drawableLeft="@drawable/shangke"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="上课"
                    android:textColor="@color/text_color_1"
                    android:textSize="20sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/xian" />

                <RadioButton
                    android:id="@+id/rbtn_xiake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_btn_status_2"
                    android:button="@null"
                    android:drawableLeft="@drawable/xiake"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="下课"
                    android:textColor="@color/text_color_1"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/xian" />
            </RadioGroup>


        </LinearLayout>


        <FrameLayout
            android:id="@+id/mFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

    </LinearLayout>


</LinearLayout>