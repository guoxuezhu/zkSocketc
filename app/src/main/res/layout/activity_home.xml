<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/activity_bg"
    android:orientation="horizontal"
    tools:context=".ui.HomeActivity">


    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbtn_changjing"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_status_1"
                android:button="@null"
                android:drawableTop="@drawable/changjing"
                android:gravity="center"
                android:paddingTop="40dp"
                android:paddingBottom="13dp"
                android:text="一键"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/xian_1" />

            <RadioButton
                android:id="@+id/rbtn_juzhen"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_status_1"
                android:button="@null"
                android:drawableTop="@drawable/shipin"
                android:gravity="center"
                android:paddingTop="40dp"
                android:paddingBottom="13dp"
                android:text="互动"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/xian_1" />

            <RadioButton
                android:id="@+id/rbtn_shebei"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_status_1"
                android:button="@null"
                android:drawableTop="@drawable/shebei"
                android:gravity="center"
                android:paddingTop="40dp"
                android:paddingBottom="13dp"
                android:text="物联"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/xian_1" />

            <RadioButton
                android:id="@+id/rbtn_lubo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_status_1"
                android:button="@null"
                android:drawableTop="@drawable/lubo"
                android:gravity="center"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="录播"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/xian_1" />

            <RadioButton
                android:id="@+id/rbtn_yinpin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_status_1"
                android:button="@null"
                android:drawableTop="@drawable/yinpin"
                android:gravity="center"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:visibility="gone"
                android:text="音频"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/xian_1" />

            <RadioButton
                android:id="@+id/rbtn_dianyuan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_status_1"
                android:button="@null"
                android:drawableTop="@drawable/dianyuan"
                android:gravity="center"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="其它"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/top_bg"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_30"
                android:text="2020-00-00 00:00:00"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/context_padding_dp"
            android:layout_marginLeft="@dimen/context_padding_dp"
            android:layout_marginRight="@dimen/context_padding_dp"
            android:background="@color/rdio_btn_bg_color"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_bg"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtn_shangke"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_2"
                    android:button="@null"
                    android:drawableLeft="@drawable/shangke"
                    android:gravity="center"
                    android:paddingLeft="140dp"
                    android:paddingRight="140dp"
                    android:text="上课"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rbtn_xiake"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/radio_btn_status_2"
                    android:button="@null"
                    android:drawableLeft="@drawable/xiake"
                    android:gravity="center"
                    android:paddingLeft="140dp"
                    android:paddingRight="140dp"
                    android:text="下课"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </RadioGroup>


        </LinearLayout>


        <FrameLayout
            android:id="@+id/mFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/context_padding_dp"
            android:layout_marginLeft="@dimen/context_padding_dp"
            android:layout_marginTop="@dimen/context_padding_dp"
            android:layout_marginBottom="@dimen/dp_20">
        </FrameLayout>

    </LinearLayout>


</LinearLayout>