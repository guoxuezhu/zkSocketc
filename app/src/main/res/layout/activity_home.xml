<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".ui.HomeActivity">


    <LinearLayout
        android:layout_width="169dp"
        android:layout_height="match_parent"
        android:background="@color/rdio_btn_bg_color"
        android:gravity="center"
        android:orientation="vertical">


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RadioButton
                android:id="@+id/rbtn_shangke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yinpin_checked_status"
                android:button="@null"
                android:drawableTop="@drawable/shangke"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="上课"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_20" />

            <RadioButton
                android:id="@+id/rbtn_xiake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@drawable/yinpin_checked_status"
                android:button="@null"
                android:drawableTop="@drawable/xiake"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="下课"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_20" />


        </RadioGroup>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtn_changjing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="窗帘"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/xian" />

                <RadioButton
                    android:id="@+id/rbtn_juzhen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="灯光"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/xian" />

                <RadioButton
                    android:id="@+id/rbtn_shebei"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="空调"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/xian" />

                <RadioButton
                    android:id="@+id/rbtn_lubo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="新风"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/xian" />

                <RadioButton
                    android:id="@+id/rbtn_dianyuan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="其它"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </RadioGroup>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/mFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

    </LinearLayout>


</LinearLayout>