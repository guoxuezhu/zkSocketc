<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="智慧教室控制系统"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_wendu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:drawableLeft="@drawable/wendu"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="温度"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />


            <TextView
                android:id="@+id/tv_shidu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:drawableLeft="@drawable/shidu"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="湿度"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:drawableLeft="@drawable/pm25"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="PM2.5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/time_tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="00:00:00"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:background="@color/text_color_1"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtn_shangke"
                    style="@style/my_radio_button_2"
                    android:drawableTop="@drawable/drawable_top_sk"
                    android:text="上课"
                    app:buttonCompat="@null" />

                <RadioButton
                    android:id="@+id/rbtn_xiake"
                    style="@style/my_radio_button_2"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableTop="@drawable/drawable_top_xiake"
                    android:text="下课"
                    app:buttonCompat="@null" />


            </RadioGroup>

            <View style="@style/xian_1" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbtn_changjing"
                    style="@style/my_radio_button_1"
                    android:drawableLeft="@drawable/drawable_left_hudong"
                    android:text="互动"
                    app:buttonCompat="@null" />

                <RadioButton
                    android:id="@+id/rbtn_dmt"
                    style="@style/my_radio_button_1"
                    android:drawableLeft="@drawable/drawable_left_dmt"
                    android:text="多媒体"
                    app:buttonCompat="@null" />


                <RadioButton
                    android:id="@+id/rbtn_dg"
                    style="@style/my_radio_button_1"
                    android:drawableLeft="@drawable/drawable_left_hjkz"
                    android:text="环境控制"
                    app:buttonCompat="@null" />


                <RadioButton
                    android:id="@+id/rbtn_lubo"
                    style="@style/my_radio_button_1"
                    android:drawableLeft="@drawable/drawable_left_lubo"
                    android:text="录播"
                    app:buttonCompat="@null" />


                <RadioButton
                    android:id="@+id/rbtn_yinpin"
                    style="@style/my_radio_button_1"
                    android:drawableLeft="@drawable/drawable_left_yinpin"
                    android:text="音频"
                    app:buttonCompat="@null" />


            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/mFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/context_padding_dp"
                android:layout_marginTop="@dimen/context_padding_dp"
                android:layout_marginRight="@dimen/context_padding_dp"
                android:layout_marginBottom="@dimen/dp_20"></FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>