<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="15dp"
    tools:context=".ui.HomeActivity">


    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/layout_bg"
        android:gravity="center"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/rbtn_shangke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yinpin_checked_status"
            android:button="@null"
            android:drawableTop="@drawable/shangke"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:text="上课"
            android:visibility="gone"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_20" />

        <RadioButton
            android:id="@+id/rbtn_xiake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yinpin_checked_status"
            android:button="@null"
            android:drawableTop="@drawable/xiake"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:text="下课"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_20" />


    </RadioGroup>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_weight="2"
        android:background="@drawable/layout_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/luzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yinpin_checked_status"
                android:button="@null"
                android:drawableTop="@drawable/luzhi"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="录制"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_20" />

            <CheckBox
                android:id="@+id/zanting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="@drawable/yinpin_checked_status"
                android:button="@null"
                android:drawableTop="@drawable/zanting"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="暂停"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_20" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/changjing_btn_marginTop"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/tingzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yinpin_checked_status"
                android:button="@null"
                android:drawableTop="@drawable/tingzhi"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="停止"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_20" />


            <CheckBox
                android:id="@+id/zhibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="@drawable/yinpin_checked_status"
                android:button="@null"
                android:drawableTop="@drawable/zhibo"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="直播"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_20" />


        </LinearLayout>

    </LinearLayout>






</LinearLayout>