<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/time_tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_30"
            android:text="2020-00-00 00:00:00"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/activity_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtn_shangke"
                    style="@style/my_radio_button_2"
                    android:drawableTop="@drawable/drawable_top_sk"
                    android:text="上课"
                    app:buttonCompat="@null" />

                <RadioButton
                    android:id="@+id/rbtn_xiake"
                    style="@style/my_radio_button_2"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableTop="@drawable/drawable_top_xiake"
                    android:text="下课"
                    app:buttonCompat="@null" />


            </RadioGroup>

            <View style="@style/xian_1" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbtn_changjing"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="互动"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:buttonCompat="@null" />


                <View
                    android:id="@+id/xian_view_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/xian_1" />

                <RadioButton
                    android:id="@+id/rbtn_juzhen"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="自由互动"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:buttonCompat="@null" />

                <View
                    android:id="@+id/xian_view_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/xian_1" />

                <RadioButton
                    android:id="@+id/rbtn_lubo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="录播"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:buttonCompat="@null" />

                <View
                    android:id="@+id/xian_view_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/xian_1" />

                <RadioButton
                    android:id="@+id/rbtn_dmt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="多媒体"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:buttonCompat="@null" />

                <View
                    android:id="@+id/xian_view_4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/xian_1" />

                <RadioButton
                    android:id="@+id/rbtn_cl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="窗帘"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:buttonCompat="@null" />


                <View
                    android:id="@+id/xian_view_5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/xian_1" />

                <RadioButton
                    android:id="@+id/rbtn_dg"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="灯光"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:buttonCompat="@null" />


                <View
                    android:id="@+id/xian_view_6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/xian_1" />

                <RadioButton
                    android:id="@+id/rbtn_kt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="空调"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:buttonCompat="@null" />


                <View
                    android:id="@+id/xian_view_7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/xian_1" />

                <RadioButton
                    android:id="@+id/rbtn_door"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="门禁"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:buttonCompat="@null" />

                <View
                    android:id="@+id/xian_view_8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/xian_1" />

                <RadioButton
                    android:id="@+id/rbtn_yinpin"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_status_1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="音频"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:buttonCompat="@null" />


            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/mFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/context_padding_dp"
                android:layout_marginTop="@dimen/context_padding_dp"
                android:layout_marginRight="@dimen/context_padding_dp"
                android:layout_marginBottom="@dimen/dp_20"></FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>