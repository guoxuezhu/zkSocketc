<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/di_color"
    android:gravity="center"
    android:padding="@dimen/dp_20"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="视频输入"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_20" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/layout_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/spbtn_dan_in_gaopaiyi"
                android:layout_width="@dimen/shipin_btn_width"
                android:layout_height="@dimen/shipin_btn_height"
                android:background="@drawable/juzhen_checkbox_status"
                android:button="@null"
                android:gravity="center"
                android:text="高拍仪"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/spjz_text_size" />

            <CheckBox
                android:id="@+id/spbtn_dan_in_diannao"
                android:layout_width="@dimen/shipin_btn_width"
                android:layout_height="@dimen/shipin_btn_height"
                android:layout_marginLeft="@dimen/shipin_btn_marginLeft"
                android:background="@drawable/juzhen_checkbox_status"
                android:button="@null"
                android:gravity="center"
                android:text="台式机"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/spjz_text_size" />

            <CheckBox
                android:id="@+id/spbtn_dan_in_bjb_1"
                android:layout_width="@dimen/shipin_btn_width"
                android:layout_height="@dimen/shipin_btn_height"
                android:layout_marginLeft="@dimen/shipin_btn_marginLeft"
                android:background="@drawable/juzhen_checkbox_status"
                android:button="@null"
                android:gravity="center"
                android:text="笔记本1"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/spjz_text_size" />

            <CheckBox
                android:id="@+id/spbtn_dan_in_bjb_2"
                android:layout_width="@dimen/shipin_btn_width"
                android:layout_height="@dimen/shipin_btn_height"
                android:layout_marginLeft="@dimen/shipin_btn_marginLeft"
                android:background="@drawable/juzhen_checkbox_status"
                android:button="@null"
                android:gravity="center"
                android:text="笔记本2"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/spjz_text_size" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">


        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="视频输出"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/text_size_20" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/layout_bg"
            android:gravity="center"
            android:orientation="horizontal">



            <CheckBox
                android:id="@+id/spbtn_dan_out_touying"
                android:layout_width="@dimen/shipin_btn_width"
                android:layout_height="@dimen/shipin_btn_height"
                android:background="@drawable/juzhen_checkbox_status"
                android:button="@null"
                android:gravity="center"
                android:text="投影"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/spjz_text_size" />

            <CheckBox
                android:id="@+id/spbtn_dan_out_dp_1"
                android:layout_width="@dimen/shipin_btn_width"
                android:layout_height="@dimen/shipin_btn_height"
                android:layout_marginLeft="@dimen/shipin_btn_marginLeft"
                android:background="@drawable/juzhen_checkbox_status"
                android:button="@null"
                android:gravity="center"
                android:text="大屏1"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/spjz_text_size" />

            <CheckBox
                android:id="@+id/spbtn_dan_out_dp_2"
                android:layout_width="@dimen/shipin_btn_width"
                android:layout_height="@dimen/shipin_btn_height"
                android:layout_marginLeft="@dimen/shipin_btn_marginLeft"
                android:background="@drawable/juzhen_checkbox_status"
                android:button="@null"
                android:gravity="center"
                android:text="大屏2"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/spjz_text_size" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>